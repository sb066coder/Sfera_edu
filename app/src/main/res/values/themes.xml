<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SferaEdu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/dark_grey</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:windowBackground">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/dark_grey</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/pink</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>
    <style name="SferaEduAppBar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/dark_grey</item>
    </style>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="h5" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>
    <style name="h6" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>
    <style name="subtitle_1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="body_2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="caption" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="button" parent="">
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/grey</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/purple</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>
    <style name="RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
</resources>